// src/layouts/BaseLayout.astro
import { ClientRouter } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import type { ui } from '../i18n/ui';

// Импортируем глобальные стили
import '../styles/style.css';
import '../styles/case-study.css';
import '../styles/brief.css';
import '../styles/blog.css';

// Определяем props для передачи мета-данных на каждую страницу
export interface Props {
	title: string;
	description: string;
    ogImage?: string;
    isTranslationKey?: boolean;
}

const {
    title,
    description,
    ogImage = '/og-image.webp',
    isTranslationKey = true,
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const finalTitle = isTranslationKey ? t(title as keyof typeof ui['ru']) : title;
const finalDescription = isTranslationKey ? t(description as keyof typeof ui['ru']) : description;

// Формируем канонический URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// ИСПОЛЬЗУЕМ ПЕРЕМЕННУЮ ОКРУЖЕНИЯ ДЛЯ GOOGLE ANALYTICS
const GTAG_ID = import.meta.env.PUBLIC_GTAG_ID;

// --- Breadcrumbs Schema Generation ---
const pathSegments = Astro.url.pathname.split('/').filter(segment => segment && segment !== lang);
const siteUrl = Astro.site?.href || 'https://avpdev.com';

// Базовая крошка - Главная
const breadcrumbItems = [
  {
    "@type": "ListItem",
    "position": 1,
    "name": lang === 'ru' ? "Главная" : "Home",
    "item": `${siteUrl}/${lang}/`
  }
];

// Генерируем остальные крошки
pathSegments.forEach((segment, index) => {
  const url = `${siteUrl}/${lang}/${pathSegments.slice(0, index + 1).join('/')}/`;
  
  // Простая эвристика для имен (можно усложнить, используя словарь переводов)
  let name = segment.charAt(0).toUpperCase() + segment.slice(1).replace(/-/g, ' ');
  
  // Если это последний элемент, используем заголовок страницы (более читаемо)
  if (index === pathSegments.length - 1) {
      // Ограничиваем длину заголовка для крошек, если он слишком длинный
      name = finalTitle.length > 30 ? finalTitle.substring(0, 30) + '...' : finalTitle;
      // Убираем HTML теги, если они попали из finalTitle (например span)
      name = name.replace(/<[^>]*>?/gm, '');
  }

  breadcrumbItems.push({
    "@type": "ListItem",
    "position": index + 2,
    "name": name,
    "item": url
  });
});

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems
};
---
<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{finalTitle}</title>
    <meta name="description" content={finalDescription} />

    <meta name="keywords" content="full-stack разработчик, веб-разработка, создать сайт, заказать сайт, автоматизация, astro, react, typescript, next.js, node.js, docker">
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={finalTitle} />
    <meta property="og:description" content={finalDescription} />

    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="AVPdev.com" />

    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="manifest" href="/site.webmanifest">


    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" xintegrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    {/* --- SCHEMA.ORG: Breadcrumbs --- */}
    <script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

    {/* --- SCHEMA.ORG: Person & ProfessionalService --- */}
    <script is:inline type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Person",
            "@id": "https://avpdev.com/#alexey",
            "name": "Alexey Patskevich",
            "url": "https://avpdev.com",
            "image": "https://avpdev.com/assets/images/about-photo.webp",
            "jobTitle": "Full-Stack Developer",
            "worksFor": {
              "@type": "Organization",
              "name": "AVPdev",
              "url": "https://avpdev.com"
            },
            "sameAs": [
              "https://github.com/AVP-Dev",
              "https://t.me/avpdevcom"
            ]
          },
          {
            "@type": "ProfessionalService",
