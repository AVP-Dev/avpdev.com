            "name": "AVPdev - Web Development & Automation",
            "url": "https://avpdev.com",
            "image": "https://avpdev.com/apple-touch-icon.png",
            "description": "Professional Full-Stack development, business automation, and IT consulting.",
            "priceRange": "$$",
            "address": {
              "@type": "PostalAddress",
              "addressCountry": "BY",
              "addressLocality": "Minsk" 
            },
