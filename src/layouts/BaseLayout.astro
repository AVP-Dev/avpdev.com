              "@id": "https://avpdev.com/#alexey"
            }
          }
        ]
      })}
    </script>

    <!-- ИСПРАВЛЕНО: Google Analytics подключается только если ID задан в .env -->
    {GTAG_ID && (
        <>
            <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${GTAG_ID}`}></script>
            <script is:inline define:vars={{ GTAG_ID }}>
              window.dataLayer = window.dataLayer || [];
              function gtag(){dataLayer.push(arguments);}
              gtag('js', new Date());
              gtag('config', GTAG_ID);
            </script>
        </>
    )}

    <ClientRouter />
</head>
<body class="light-theme">

    <Header />

    <main>
        <slot />
    </main>

    <CookieBanner />
    <Footer />
    <ScrollToTop />

    <script src="../scripts/main.ts"></script>

