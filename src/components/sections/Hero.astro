---
// src/components/sections/Hero.astro
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="hero">
    <div id="particles-js"></div>
    <div class="container hero-container">
        <div class="hero-content">
            <div class="hero-text fade-in">
                <h1 set:html={t("hero_h1")} />
                <p>{t("hero_p")}</p>
                <a href={`/${lang}/#contact`} class="cta-button"
                    >{t("hero_cta")}</a
                >
            </div>
        </div>
    </div>
</section>

<!-- Подключаем скрипт инициализации -->
<script>
    declare var particlesJS: any;

    async function initParticles() {
        const particlesContainer = document.getElementById("particles-js");
        if (!particlesContainer) return;

        // Загружаем саму библиотеку динамически, если она еще не загружена
        if (typeof particlesJS === "undefined") {
            const script = document.createElement("script");
            script.src =
                "https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js";
            script.async = true;
            script.onload = () => loadParticlesConfig();
            document.head.appendChild(script);
        } else {
            loadParticlesConfig();
        }
    }

    function loadParticlesConfig() {
        if (typeof particlesJS === "undefined") return;

        const bodyStyles = getComputedStyle(document.body);
        const particleColor =
            bodyStyles
                .getPropertyValue("--particle-color")
                .trim()
                .replace(/"/g, "") || "#888888";
        const particleLineColor =
            bodyStyles
                .getPropertyValue("--particle-line-color")
                .trim()
                .replace(/"/g, "") || "#888888";

        particlesJS("particles-js", {
            particles: {
                number: {
                    value: 40, // Уменьшено для мобил
                    density: { enable: true, value_area: 800 },
                },
                color: { value: particleColor },
                shape: { type: "circle" },
                opacity: { value: 0.3, random: false },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: particleLineColor,
                    opacity: 0.2,
                    width: 1,
                },
                move: {
                    enable: true,
                    speed: 1,
                    direction: "none",
                    out_mode: "out",
                },
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: false }, // Отключено для производительности на мобилках
                    onclick: { enable: false },
                    resize: true,
                },
            },
            retina_detect: true,
        });
    }

    // Инициализация при загрузке страницы (astro:page-load поддерживает ClientRouter)
    document.addEventListener("astro:page-load", initParticles);
    // Также слушаем кастомное событие смены темы
    document.addEventListener("theme:changed", loadParticlesConfig);
</script>
