---
// src/components/sections/Hero.astro
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="hero" class="hero-section">
    <div id="particles-js"></div>
    <div class="container hero-container">
        <div class="hero-content">
            <div class="hero-text fade-in">
                <h1 set:html={t("hero_h1")} />
                <p>{t("hero_p")}</p>
                <div class="cta-group">
                    <a href={`/${lang}/#contact`} class="cta-button">
                        {t("hero_cta")}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        min-height: 100vh;
        min-height: 100dvh;
        display: flex;
        align-items: center;
        /* Safe area aware padding top: 80px (header) + fluid top spacing */
        padding-top: clamp(100px, 15vh, 180px);
        padding-bottom: clamp(60px, 8vh, 100px);
        position: relative;
        overflow: hidden;
    }

    .hero-container {
        width: 100%;
        position: relative;
        z-index: 2;
    }

    .hero-text h1 {
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        line-height: 1.1;
        margin-bottom: 1.5rem;
    }

    .hero-text p {
        font-size: clamp(1.1rem, 2vw, 1.35rem);
        margin-bottom: 2.5rem;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-group {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding-top: clamp(120px, 20vh, 160px);
        }
    }
</style>

<!-- Подключаем скрипт инициализации -->
<!-- Подключаем скрипт инициализации -->
<script is:inline src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js" defer></script>
<script>
    function loadParticlesConfig() {
        if (typeof particlesJS === "undefined") {
            // Если библиотека еще не загружена (хоть и должна быть из-за defer), попробуем чуть позже
            setTimeout(loadParticlesConfig, 100);
            return;
        }

        const bodyStyles = getComputedStyle(document.body);
        const particleColor =
            bodyStyles
                .getPropertyValue("--particle-color")
                .trim()
                .replace(/"/g, "") || "#888888";
        const particleLineColor =
            bodyStyles
                .getPropertyValue("--particle-line-color")
                .trim()
                .replace(/"/g, "") || "#888888";

        particlesJS("particles-js", {
            particles: {
                number: {
                    value: 30, // Еще меньше для мобил
                    density: { enable: true, value_area: 800 },
                },
                color: { value: particleColor },
                shape: { type: "circle" },
                opacity: { value: 0.3, random: false },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: particleLineColor,
                    opacity: 0.2,
                    width: 1,
                },
                move: {
                    enable: true,
                    speed: 1, // Медленнее
                    direction: "none",
                    out_mode: "out",
                },
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: false },
                    onclick: { enable: false },
                    resize: true,
                },
            },
            retina_detect: false, // Отключаем для перфоманса
        });
    }

    // Инициализация при загрузке страницы (astro:page-load поддерживает ClientRouter)
    document.addEventListener("astro:page-load", loadParticlesConfig);
    // Также слушаем кастомное событие смены темы
    document.addEventListener("theme:changed", loadParticlesConfig);
</script>
