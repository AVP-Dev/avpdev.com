---
// src/components/sections/Contact.astro
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { ContactForm } from "../forms/ContactForm";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get all translations as a record for React
const allTranslations = {
    form_name: t("form_name"),
    form_email: t("form_email"),
    form_phone: t("form_phone"),
    form_message: t("form_message"),
    form_hint: t("form_hint"),
    form_button: t("form_button"),
};
---

<section id="contact">
    <div class="container">
        <h2 class="section-title fade-in" set:html={t("contact_h2")} />
        <p class="section-subtitle fade-in">{t("contact_p")}</p>

        <ContactForm client:visible t={allTranslations} lang={lang} />
    </div>
</section>
