---
// src/components/PortfolioCard.astro
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import type { Project, TranslationKey } from "../env.d.ts";

interface Props extends Project {}

const { img, titleKey, link, techStack, category } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const linkTextKey = "portfolio_card_link";
---

<div class="portfolio-card" data-category={category}>
    <div class="portfolio-image-wrapper">
        <Image
            src={img}
            alt={t(titleKey as TranslationKey)}
            widths={[340, 680]}
            sizes="(max-width: 800px) 100vw, 340px"
            loading="lazy"
            decoding="async"
            class="portfolio-image-img"
        />
        <div class="portfolio-overlay">
            <a href={link} class="case-link-btn" set:html={t(linkTextKey)} />
        </div>
    </div>
    <div class="portfolio-info">
        <h3 set:html={t(titleKey as TranslationKey)} />
        <div class="portfolio-footer">
            <div class="portfolio-tags">
                {
                    techStack &&
                        techStack.slice(0, 2).map((tech) => (
                            <span class="tag">
                                <i
                                    class:list={[tech.icon, "fa-fw"]}
                                    style={{ color: tech.color }}
                                />
                                {tech.title}
                            </span>
                        ))
                }
            </div>
            <a href={link} class="case-arrow-link" aria-label={t(linkTextKey)}>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

<style>
    .portfolio-card {
        background: var(--primary-color);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        position: relative;
        box-shadow: var(--card-shadow);
    }

    .dark-theme .portfolio-card {
        box-shadow:
            var(--card-shadow),
            inset 0 1px 1px rgba(255, 255, 255, 0.05);
    }

    .portfolio-card:hover {
        transform: translateY(-10px);
        border-color: rgba(var(--accent-color-start-rgb), 0.4);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.6);
    }

    .portfolio-image-wrapper {
        position: relative;
        height: 220px;
        overflow: hidden;
    }

    .portfolio-image-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .portfolio-card:hover .portfolio-image-img {
        transform: scale(1.1);
    }

    .portfolio-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        backdrop-filter: blur(4px);
    }

    .portfolio-card:hover .portfolio-overlay {
        opacity: 1;
    }

    .case-link-btn {
        background: white;
        color: black;
        padding: 0.75rem 1.5rem;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 700;
        font-size: 0.9rem;
        transform: translateY(10px);
        transition: all 0.3s ease;
    }

    .portfolio-card:hover .case-link-btn {
        transform: translateY(0);
    }

    .portfolio-info {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        gap: 1rem;
    }

    .portfolio-info h3 {
        font-size: 1.25rem;
        margin: 0;
        line-height: 1.3;
        font-family: var(--font-heading);
        color: var(--text-color);
    }

    .portfolio-footer {
        margin-top: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .portfolio-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag {
        font-family: var(--font-mono);
        font-size: 0.75rem;
        background: var(--tag-bg);
        color: var(--tag-text);
        padding: 0.25rem 0.6rem;
        border-radius: 6px;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-weight: 500;
    }

    .case-arrow-link {
        color: var(--text-secondary-color);
        font-size: 1.25rem;
        transition: all 0.3s ease;
    }

    .portfolio-card:hover .case-arrow-link {
        color: var(--accent-color-start);
        transform: translateX(3px);
    }
</style>
